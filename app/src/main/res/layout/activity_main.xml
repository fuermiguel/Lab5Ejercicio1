<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.miguel.lab5ejercicio1.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorPrimaryDark"
                android:clickable="true"
                android:padding="3dp"
                app:srcCompat="@drawable/ned_flanders_medium"
                android:id="@+id/imageView"
                android:onClick="onClickImatgenSimpsons"
                android:contentDescription="@string/descripcion"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorPrimaryDark"
                android:clickable="true"
                android:padding="3dp"
                app:srcCompat="@drawable/homer_simpson_medium"
                android:id="@+id/imageView2"
                android:onClick="onClickImatgenSimpsons"
                android:contentDescription="@string/descripcion"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorPrimaryDark"
                android:clickable="true"
                android:padding="3dp"
                app:srcCompat="@drawable/barney_gumble_medium"
                android:id="@+id/imageView3"
                android:onClick="onClickImatgenSimpsons"
                android:contentDescription="@string/descripcion"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorPrimaryDark"
                android:clickable="true"
                android:padding="3dp"
                app:srcCompat="@drawable/lisa_simpson_medium"
                android:id="@+id/imageView4"
                android:onClick="onClickImatgenSimpsons"
                android:contentDescription="@string/descripcion"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorPrimaryDark"
                app:srcCompat="@drawable/los_simpsons_sr_burns_medium"
                android:id="@+id/imageView5"
                android:clickable="true"
                android:padding="3dp"
                android:onClick="onClickImatgenSimpsons"
                android:contentDescription="@string/descripcion"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorPrimaryDark"
                android:clickable="true"
                android:padding="3dp"
                app:srcCompat="@drawable/homer_simpson_medium1"
                android:id="@+id/imageView6"
                android:onClick="onClickImatgenSimpsons"
                android:contentDescription="@string/descripcion"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
